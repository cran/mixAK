citHeader("To cite package 'mixAK' in publications, please, use either of the following articles:")
     
desc <- packageDescription("mixAK")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

